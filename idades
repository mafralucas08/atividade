using System;
class Program {
    static void Main() {
        Console.WriteLine("Nome da primeira pessoa:");
        string nome1 = Console.ReadLine();
        Console.WriteLine("Idade da primeira pessoa (inteiro):");
        double idade1 = double.Parse(Console.ReadLine());

        Console.WriteLine("Nome da segunda pessoa:");
        string nome2 = Console.ReadLine();
        Console.WriteLine("Idade da segunda pessoa (inteiro):");
        double idade2 = double.Parse(Console.ReadLine());

        double media = (idade1 + idade2) / 2.0;

        Console.WriteLine($"Pessoas: {nome1} e {nome2}");
        Console.WriteLine($"Idade m√©dia: {media:F1}");
    }
}
